{% extends "base.twig" %}
{% block content %}
<div class="project">
{% set project = fetch("Project", {"id": _GET['1']})[0] %}
{% set project_images = fetch("Image", { parent_id: project.id }) %}

  <div class="project--hero d-flex justify-content-center align-items-center">
    <img style="position: relative" class="project--hero" src="img/{{ project_images[0].Image }}">
    <img class="project--hero-image" src="images/logo-c-white.png">
  </div>

  <div class="padding-y-60">
    <div class="d-flex flex-direction padding-x-main">
      <div class="d-flex flex-column justify-content-between project-left">
          <div class="black font-24 font-bold">{{ project.Title }}</div>
          <div class="black font-14 margin-y-box">{{ project.Category }}</div>
      </div>

      <div class="project-right padding-x-right-col d-flex flex-column">
        <div class="d-flex flex-column margin-y-box">
          <div class="font-bold font-14 black margin-y-text">{{ project.About_title }}</div>
          <div class="font-14 black letter-spacing--0_3">{{ project.About }}</div>
        </div>

        <div class="d-flex flex-direction justify-content-between">
          <div class="project-right-side">
            <div class="black font-14 font-bold margin-y-text">Challenge</div>
            <div class="black font-14 margin-y-box">{{ project.Challenge }}</div>
          </div>
          <div class="project-right-side">
            <div class="black font-14 font-bold margin-y-text">Approach</div>
            <div class="black font-14 margin-y-box">{{ project.Approach }}</div>
          </div>
        </div>

      </div>
    </div>
  </div>

  {% for project_image in project_images %}
  {% if loop.index != 1 %}
  <div class="project--images margin-y-box">
    <img src="img/{{ project_image.Image }}" class="project--images-image">
  </div>
  {% endif %}
  {% endfor %}

</div>

{% endblock %}
