{% extends "base.twig" %}
{% block content %}

<div class="contact" id="top">
  <div class="padding-x-main">
    <div class="d-flex flex-direction contact-side contact-border">

      <div class="contact-side-left d-flex flex-column">
        <div class="white font-36 font-bold margin-y-title contact-side-left-tit select-y">New Project?</div>
        <div class="white font-14 contact-side-left-txt margin-y-title select-y">Have a question or simply want to say hello?</div>
      </div>

      <div class="contact-side-right d-flex flex-column">
        <div class="white font-18 margin-y-title contact-side-right-txt">
            Enquiry Form
        </div>
        <form id="contactform">
          <div class="d-flex flex-column">
            <input class="contact-side-right-form font-12 white" id="name" type="text" placeholder="Name"/>
            <input class="contact-side-right-form font-12 white" id="email" type="email" placeholder="Email"/>
            <input class="contact-side-right-form font-12 white" id="phone" type="tel" placeholder="Phone"/>
            <input class="contact-side-right-form font-12 white" id="subject" type="text" placeholder="Subject"/>
            <input class="contact-side-right-form-msg font-12 white" id="message" type="text" placeholder="Message"/>
            <button class="contact-side-right-button button-disabled font-12 font-bold white" type="submit">Submit</button>
          </div>
        </form>
        <div class="contact-side-right-error font-12 white" id="errormail"></div>
      </div>

    </div>
  </div>
</div>

{% endblock %}
